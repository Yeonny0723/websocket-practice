doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Video Chat
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header 
            h1 Video Chat
        main 
            div#room-create__container
                form
                    input(placeholder="room name", required, type="text")
                    button Enter Room
            div#room__container
                h3 
                ul
                form 
                    input(placeholder="message", requried, type="text")
                    button Send
            ul#chat__container
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js") 
