doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Video Chat
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header 
            h1 Video Chat
        main 
            div#joinRoomContainer
                form
                    input(placeholder="room name", required, type="text")
                    button Enter room
            div#videoContainer
                video#myVideo(autoplay, playsinline,width="400",height="400")
                button#muteBtn Mute
                button#cameraSwitchBtn Off
                select#cameraSelects 
                video#peerVideo(autoplay, playsinline,width="400",height="400")
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js") 
